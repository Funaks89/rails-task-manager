<h1>Tasks</h1>

 <ul >
    <% @tasks.each do |task| %>
      <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i><%= link_to  "#{task.title}", task_path(task) %>
      <% else %>
        <i class="far fa-square"></i><%= link_to  "#{task.title}", task_path(task) %>
      <% end %>
      </li>
    <% end %>
 </ul>

<%= link_to 'add a new task', new_task_path, class:"fas fa-plus-circle" %>


